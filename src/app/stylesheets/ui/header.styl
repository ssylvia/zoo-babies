#header{
  background-color: header;
  width: 100%;
  height: 130px;
  border: none;
  overflow: hidden;
}

#title{
  height: 100;
  font-size: 80px;
  padding: 0 15px 0 25px;

  .accent1{
    color: accent1
  }

  .accent2{
    color: accent2;
    margin-left: -20px;
  }
}

#subtitle{
  color: subtitle;
  padding: 30px 20px 0 15px;
  line-height: 1.2;
  font-size: 14px;
}

#branding-wrapper{
  padding: 25px 25px 0 60px;
  text-align: right;

  #social{
    margin-bottom: 20px;
    font-size: 14px;
  }

  #smLink{
    font-weight: 400;
  }

  .social-text{
    text-decoration: none;
    color: socialText;
    cursor: pointer;

    &:hover{
      color: socialTextHover;
    }
  }

  [class^="icon-"]:before, [class*=" icon-"]:before{
    margin: 0;
  }
}

#mobile-entrance, .mobile-social{
  display: none;
}

@media all and (max-width: 767){

  #header{
    height: 50px;
    min-height: 0;
  }

  #title{
    height: auto;
    font-size: 30px;
    padding: 5px 0 0 10px;

    .accent2{
      margin-left: -8px;
    }

    .mobile-social{
      display: block;
      color: white;
      position: fixed;
      right: 10px;
      top: 5px;
    }
  }

  #subtitle, #branding-wrapper{
    display: none;
  }

  #mobile-entrance{
    display: block;
    background-color: white;
    overflow: auto;
    text-align: center;
    z-index: 106;

    #entrance-text{
      padding: 10px;
      font-size: 16px;
      text-align: left;
      line-height: 1.5;
    }

    img{
      margin-top: 10px;
    }
  }

}